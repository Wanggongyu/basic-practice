   },
   "outputs": [],
   "source": [
    "def rhombus(n): #n表示星型最多那一行的行数(中间那一行），从0记起,本例中n=3\n",
    "    for i in range(2*n+1):\n",
    "        spaces = abs(i - n)\n",
    "        starts = 2*n+1 - 2*spaces\n",
    "        print(\" \" * spaces, \"*\" * starts)"
   ]
  },
